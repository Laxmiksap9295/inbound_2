<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.ui.layout.form"
	xmlns:upload="sap.m.upload">
	<Dialog stretchOnPhone="true" type="Standard" height="100%"
		class="sapUiResponsiveContentPadding">
		<customHeader>
			<Bar class="Inbound_Bar">
				<contentMiddle>
					<Label text="{ITEM>/WbHeaderNav/results/0/Wbid}" class="Inbound_Title"
						design="Bold"></Label>
				</contentMiddle>
				<contentRight>
					<Button icon="sap-icon://decline" press="onClickBack" tooltip="{i18n>Tooltip2}"
						class="Inbound_NavBtn"></Button>
				</contentRight>
			</Bar>
		</customHeader>
		<ScrollContainer class="sapUiTinyMargin" horizontal="true" visible="true" vertical="true"
			width="100%" height="100%">
			<VBox>
				<f:SimpleForm id="gate_form_exit" editable="true" layout="ResponsiveGridLayout"
					labelSpanXL="5" labelSpanL="5" labelSpanM="5" labelSpanS="5"
					adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0"
					emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1"
					singleContainerFullSize="false">
					<f:content>
						<Label text="{i18n>Column1}" design="Bold"></Label>
						<Input value="{ITEM>/WbHeaderNav/results/0/Wbid}" class="Inbound_InputBrd"
							enabled="false"></Input>
						<Label text="{i18n>Label20}" design="Bold" required="true"></Label>
						<Input placeholder="{i18n>Label5}" liveChange="onValueHelpPress"
							class="Inbound_InputBrd" valueHelpOnly="true" showValueHelp="true"
							valueHelpRequest="onValueHelpPress" id="id_InGate"
							description="{ITEM>/WbHeaderNav/results/0/GateName}"
							value="{parts:[{path:'ITEM>/WbHeaderNav/results/0/Gate'},{path:'ITEM>/WbHeaderNav/results/0/Wsgate'}],formatter:'ZGT_MM_INBOUND.Util.Formatter.PO'}" />
						<Label text="{i18n>Label6}" design="Bold"></Label>
						<Input value="{ITEM>/WbHeaderNav/results/0/Vehno}" class="Inbound_InputBrd"
							enabled="false"></Input>
						<Label text="{i18n>Label7}" design="Bold"></Label>
						<Input value="{ITEM>/WbHeaderNav/results/0/Vehtyp}" class="Inbound_InputBrd"
							enabled="false"></Input>
						<Label text="{i18n>Label8}" design="Bold"></Label>
						<Input value="{ITEM>/WbHeaderNav/results/0/Dname}" class="Inbound_InputBrd"
							enabled="false"></Input>
						<Label text="{i18n>Label9}" design="Bold"></Label>
						<!--code
						added by kirubakaran on 17.09.2020 for brazil plant-->
						<Input value="{ITEM>/WbHeaderNav/results/0/DriverMob}"
							class="Inbound_InputBrd" enabled="false"></Input>
						<Label text="{i18n>cms_contract}" design="Bold"
							visible="{oViewModel>/cmsContract}"></Label>
						<Input value="{ITEM>/WbHeaderNav/results/0/Cmscontract}"
							class="Inbound_InputBrd" enabled="false"
							visible="{oViewModel>/cmsContract}"></Input>

						<Label text="{i18n>RefNo}" design="Bold" required="true"></Label>
						<FlexBox width="100%" visible="{oViewModel>/refNumber}">
							<Input maxLength="42" class="Inbound_InputBrd"
								value="{ITEM>/WbHeaderNav/results/0/Config17}"
								enabled="false" valueState="None" valueStateText="None">
								<layoutData>
									<FlexItemData growFactor="40" />
								</layoutData>
							</Input>
							<Button icon="sap-icon://bar-code" tooltip="{i18n>RefNo}"
								class="sapUiTinyMarginBegin" type="Emphasized" press="onScanQRValue" />
							<Button icon="sap-icon://refresh" tooltip="{i18n>reset}"
								class="sapUiTinyMarginBegin" type="Reject" press="onresetRefNo" />
						</FlexBox>


