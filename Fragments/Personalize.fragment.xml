<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <P13nDialog showReset="false"  ok="onOK" cancel="onCancel" stretchOnPhone="true" stretch="true"
                reset="onReset" class="sapUiSizeCompact cl_dialogwidth" resizable="true" >
        <panels>
            <P13nColumnsPanel changeColumnsItems="onChangeColumnsItems"
                              items="{path: '/Items'}"
                              columnsItems="{path: '/ColumnsItems'}">
                <items>
                    <P13nItem columnKey="{columnKey}" text="{i18n>text}"/>
                </items>
                <columnsItems>
                    <P13nColumnsItem columnKey="{columnKey}" index="{index}" visible="{visible}"/>
                </columnsItems>
            </P13nColumnsPanel>
        </panels>
    </P13nDialog>
</core:FragmentDefinition>