<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Dialog id="id_ExceptionQADialog" >
      <customHeader>
			<Bar class="Inbound_Bar">
				<contentMiddle>
					<Label text="{i18n>ExceptionQA}" class="Inbound_Title" design="Bold"></Label>
				</contentMiddle>
				<contentRight>
					<!--<Button icon="sap-icon://decline" press="_DialogClose" class="Inbound_NavBtn" id="id_BatchCancle"></Button>-->
					<Button icon="sap-icon://decline" press="onQclose" class="Inbound_NavBtn"></Button>
				</contentRight>
			</Bar>
		</customHeader>
		<content>
		<f:SimpleForm editable="true" layout="ResponsiveGridLayout"
			labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12"
			columnsXL="1" columnsL="1" columnsM="1">
			<f:content>
				<Label text="Grade Change"/>
				<Input value="{ExceptionModel>/Grade}" placeholder="Enter grade"/>

				<Label text="Surcharge"/>
				<Input value="{ExceptionModel>/Surcharge}" placeholder="%" type="Number"/>

				<Label text="Reason"/>
				<Input value="{ExceptionModel>/Reason}" placeholder="Enter Reason"/>
			</f:content>
		</f:SimpleForm>
        </content>
		<beginButton>
			<Button text="QA Exception" type="Accept" press="fnSaveBatchChar" id="id_BtnExceptionQA2"/>
		</beginButton>
		<!-- <endButton>
			<Button text="Cancel" type="Reject" press="onQclose"/>
		</endButton> -->
	</Dialog>
</core:FragmentDefinition>
