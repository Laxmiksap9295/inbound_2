<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" 
		  xmlns:f="sap.ui.layout.form"	controllerName="ZGT_MM_INBOUND.controller.Status_Update"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="{i18n>Titlet}" >
				<customHeader>
					<Bar class="Inbound_Bar1">
						<contentLeft>
							<Button icon="sap-icon://nav-back" press="onNavBack" tooltip="{i18n>Tooltip2}" class="Inbound_NavBtn"></Button>
						</contentLeft>
						<contentMiddle>
							<Label text="{i18n>Title17}" design="Bold" class="Inbound_Title"></Label>
						</contentMiddle>
					</Bar>
				</customHeader>
				<!--<Panel class="Cl_Batch_Panel">-->
					<content>
						<f:SimpleForm id="SimpleFormDisplay354" editable="false" layout="ResponsiveGridLayout" labelSpanXL="5" labelSpanL="4" labelSpanM="4"
								labelSpanS="4" adjustLabelSpan="false" emptySpanXL="2" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1"
								singleContainerFullSize="false" class="Inbound_SimpleForm" >
								<f:content>
															<!-- added plant by srinivas on 11/11/2025 -->
									 <Label text="{i18n>Label4}" design="Bold" class="sapUiSmallMarginTop Inbound_SimpleForm" required="false"></Label>
									<Input value="" class="Inbound_InputBrd" id="id_InPlant" placeholder="{i18n>Title4}" showValueHelp="true" valueHelpRequest="onValueHelpPlantF4"></Input>
									<Label text="{i18n>Label22}" design="Bold" class="sapUiSmallMarginTop Inbound_SimpleForm"></Label>
									<DatePicker id="id_InDate" change="onDateChange"></DatePicker>
									<Label text="{i18n>Label6}" design="Bold" class="sapUiSmallMarginTop Inbound_SimpleForm"></Label>
									<Input placeholder="{i18n>Label6}" liveChange="onValueHelpPress" class="Inbound_InputBrd" id="id_InVehicleNo"
									valueHelpOnly="true" showValueHelp="true" valueHelpRequest="onValueHelpPress"  value=""/>
									<Label text="{i18n>Label3}" design="Bold" class="sapUiSmallMarginTop Inbound_SimpleForm"></Label>
									<Input value="" enabled="false" id="id_InWbid" class="Inbound_InputBrd"></Input>
									<Label text="{i18n>Label21}" design="Bold" class="sapUiSmallMarginTop Inbound_SimpleForm" required="true"></Label>
									<Input value="" class="Inbound_InputBrd" id="id_InReason"></Input>
							</f:content>
						</f:SimpleForm>
					</content>
				<!--</Panel>-->
				<footer>
					<Toolbar>
						<ToolbarSpacer></ToolbarSpacer>
						<Button text="{i18n>Text16}" press="onPressCheck" class="Inbound_BtnClr"></Button>
						
						<Button id="id_BtnSave" text="{i18n>Label14}" press="onStatusSubmit" class="Inbound_BtnClr" visible="false"></Button>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>